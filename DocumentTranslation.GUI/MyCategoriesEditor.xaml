<Window x:Class="DocumentTranslation.GUI.MyCategoriesEditor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DocumentTranslation.GUI"
        mc:Ignorable="d"
        Title="My Categories" Height="450" Width="400">
    <Grid>
        <FlowDocumentReader>
            <FlowDocument>
                <Table>
                    <Table.Columns>
                        <TableColumn/>
                        <TableColumn/>
                    </Table.Columns>
                    <TableRowGroup>
                        <TableRow Background="Azure">
                            <TableCell>
                                <Paragraph FontFamily="Arial" FontSize="10">Name</Paragraph>
                            </TableCell>
                            <TableCell>
                                <Paragraph FontFamily="Arial" FontSize="10">Category ID</Paragraph>
                            </TableCell>
                        </TableRow>
                    </TableRowGroup>
                </Table>
            </FlowDocument>
        </FlowDocumentReader>
    </Grid>
</Window>
